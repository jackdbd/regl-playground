{
  "name": "regl-playground",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:jackdbd/regl-playground.git",
  "author": "jackdbd <jackdebidda@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --config webpack.config.js --mode development --open",
    "lint": "prettier --write '{,!(node_modules)/}**/*.{js,jsx}'",
    "build": "webpack --config webpack.config.js --progress --mode production",
    "test": "jest && codecov"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "dependencies": {
    "bunny": "^1.0.1",
    "chroma-js": "^1.3.4",
    "d3": "^5.0.0",
    "gl": "^4.0.4",
    "gl-mat4": "^1.1.4",
    "regl": "^1.3.1",
    "regl-camera": "^2.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.0.0-alpha.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "codecov": "^3.0.0",
    "compression-webpack-plugin": "^1.1.11",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "4.2.0",
    "jest": "^22.1.4",
    "jest-image-snapshot": "^2.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "navalia": "^1.2.0",
    "node-sass": "^4.9.0",
    "prettier": "^1.12.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "webpack": "^4.7.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^3.0.0",
    "webpack-dev-server": "^3.1.4",
    "webpack-glsl-loader": "^1.0.1"
  }
}
